<table border="1" id="pharmacyTable" style="display:none;"> 

    <tr><th>ID</th><th>Name</th><th>Address</th><th>Delete</th></tr> 

</table> 

 

<hr> 

 

<!-- ===================== PRESCRIPTIONS ===================== --> 

<h2>Prescriptions</h2> 

<input id="rxPatient" placeholder="Patient ID"> 

<input id="rxDoctor" placeholder="Doctor ID"> 

<input id="rxPharmacy" placeholder="Pharmacy ID"> 

<input id="rxDate" placeholder="Prescription Date (YYYY-MM-DD)"> 

<input id="rxDrug" placeholder="Drug Name"> 

<input id="rxDose" placeholder="Dosage"> 

<select id="rxConfirm"> 

    <option value="1">Filled</option> 

    <option value="0">Not Filled</option> 

</select> 

<button onclick="addPrescription()">Add Prescription</button> 

 

<table border="1" id="prescriptionTable" style="display:none;"> 

    <tr><th>ID</th><th>Patient</th><th>Doctor</th><th>Pharmacy</th><th>Date</th> 

        <th>Drug</th><th>Dosage</th><th>Filled?</th><th>Delete</th></tr> 

</table> 

 

