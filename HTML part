</head> 

<body> 

 

<h1>Pharmacy Project</h1> 

 

<!-- ===================== DOCTORS ===================== --> 

<h2>Doctors</h2> 

<input id="docName" placeholder="Name"> 

<input id="docPhone" placeholder="Phone"> 

<button onclick="addDoctor()">Add Doctor</button> 

 

<table border="1" id="doctorTable" style="display:none;"> 

    <tr><th>ID</th><th>Name</th><th>Phone</th><th>Delete</th></tr> 

</table> 

 

<hr> 

 

<!-- ===================== PATIENTS ===================== --> 

<h2>Patients</h2> 

<input id="patName" placeholder="Name"> 

<input id="patDOB" placeholder="DOB (YYYY-MM-DD)"> 

<input id="patContact" placeholder="Contact Info"> 

<button onclick="addPatient()">Add Patient</button> 

 

<table border="1" id="patientTable" style="display:none;"> 

    <tr><th>ID</th><th>Name</th><th>DOB</th><th>Contact</th><th>Delete</th></tr> 

</table> 

 

<hr> 

 

<!-- ===================== APPOINTMENTS ===================== --> 

<h2>Appointments</h2> 

<input id="appPatient" placeholder="Patient ID"> 

<input id="appDoctor" placeholder="Doctor ID"> 

<input id="appDate" placeholder="Visit Date (YYYY-MM-DD HH:MM)"> 

<input id="appDiagnosis" placeholder="Diagnosis"> 

<button onclick="addAppointment()">Add Appointment</button> 

 

<table border="1" id="appointmentTable" style="display:none;"> 

    <tr><th>ID</th><th>Patient_ID</th><th>Doctor_ID</th><th>Visit Date</th><th>Diagnosis</th><th>Delete</th></tr> 

</table> 

 

