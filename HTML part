<!-- ===================== ORDERS ===================== --> 

<h2>Orders</h2> 

<input id="ordSupplierID" placeholder="Supplier ID"> 

<input id="ordPharmID" placeholder="Pharmacy ID"> 

<input id="ordDate" placeholder="Order Date (YYYY-MM-DD)"> 

<input id="ordShip" placeholder="Shipped Date (YYYY-MM-DD)"> 

<input id="ordItem" placeholder="Item Description"> 

<button onclick="addOrder()">Add Order</button> 

 

<table border="1" id="orderTable" style="display:none;"> 

    <tr><th>ID</th><th>Supplier_ID</th><th>Pharmacy_ID</th><th>Order Date</th> 

        <th>Date Shipped</th><th>Item</th><th>Delete</th></tr> 

</table> 

 

<hr> 

 

<script> 

let docID = 1, patID = 1, appID = 1, pharmID = 1, rxID = 1, supplierID = 1, ordID = 1; 

 

function addRow(tableId, values) { 

    let table = document.getElementById(tableId); 

 

    // Show table when first row is added 

    table.style.display = "table"; 

 

    let row = table.insertRow(); 

    row.innerHTML = values.join("") + 

        "<td><button onclick='this.parentNode.parentNode.remove()'>Delete</button></td>"; 

} 

 

/* DOCTORS */ 

function addDoctor() { 

    addRow("doctorTable", [ 

        `<td>${docID++}</td>`, 

        `<td>${docName.value}</td>`, 

        `<td>${docPhone.value}</td>` 

    ]); 

} 

 

/* PATIENTS */ 

function addPatient() { 

    addRow("patientTable", [ 

        `<td>${patID++}</td>`, 

        `<td>${patName.value}</td>`, 

        `<td>${patDOB.value}</td>`, 

        `<td>${patContact.value}</td>` 

    ]); 

} 

 

/* APPOINTMENTS */ 

function addAppointment() { 

    addRow("appointmentTable", [ 

        `<td>${appID++}</td>`, 

        `<td>${appPatient.value}</td>`, 

        `<td>${appDoctor.value}</td>`, 

        `<td>${appDate.value}</td>`, 

        `<td>${appDiagnosis.value}</td>` 

    ]); 

} 

 

/* PHARMACIES */ 

function addPharmacy() { 

    addRow("pharmacyTable", [ 

        `<td>${pharmID++}</td>`, 

        `<td>${pharmName.value}</td>`, 

        `<td>${pharmAddress.value}</td>` 

    ]); 

} 

 

/* PRESCRIPTIONS */ 

function addPrescription() { 

    addRow("prescriptionTable", [ 

        `<td>${rxID++}</td>`, 

        `<td>${rxPatient.value}</td>`, 

        `<td>${rxDoctor.value}</td>`, 

        `<td>${rxPharmacy.value}</td>`, 

        `<td>${rxDate.value}</td>`, 

        `<td>${rxDrug.value}</td>`, 

        `<td>${rxDose.value}</td>`, 

        `<td>${rxConfirm.value}</td>` 

    ]); 

} 

 

/* SUPPLIERS */ 

function addSupplier() { 

    addRow("supplierTable", [ 

        `<td>${supplierID++}</td>`, 

        `<td>${supName.value}</td>`, 

        `<td>${supPhone.value}</td>`, 

        `<td>${supAddress.value}</td>` 

    ]); 

} 

 

/* ORDERS */ 

function addOrder() { 

    addRow("orderTable", [ 

        `<td>${ordID++}</td>`, 

        `<td>${ordSupplierID.value}</td>`, 

        `<td>${ordPharmID.value}</td>`, 

        `<td>${ordDate.value}</td>`, 

        `<td>${ordShip.value}</td>`, 

        `<td>${ordItem.value}</td>` 

    ]); 

} 

</script> 

 

</body> 

</html> 
